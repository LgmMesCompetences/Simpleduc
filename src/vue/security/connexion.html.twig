{% extends "base.html.twig" %}
{% block title %} {{ parent() }} - Accueil{% endblock %}


{% block navbar %}{% endblock %}

{% block contenu %}

    {% if form.valide is defined %}
    {% if form.valide == true %}
        <h1>Connexion réussie</h1>
    {% else %}
    <h1>Echec de la connexion</h1>
    <h1>Erreur : {{form.message}}</h1>
    <h1><a href="index.php?page=connexion">Retourner sur la page de connexion</a></h1>
    {% endif %} 
{% else %} 

        <div class="boiteConnexion z-depth-3 white">
			<form action="index.php?page=connexion"method="post"enctype="application/x-www-form-urlencoded">
	    		
				<label for="email" class="sr-only">Email:</label>
	    			<input type="email" id="email" name="email" class="form-control" placeholder="Email" required autofocus>
	
	    			<label for="password">Mot de passe:</label>
	    			<input type="password" id="password" name="password" class="form-control"placeholder="Mot de passe"  required>      
	
	    			<a class="boutonConnexion waves-effect waves-light btn" id="wrapper" type="submit" name="btConnecter">Se connecter</a> 
	    			<a href="#">Mot de passe oublié ?</a>
	    
			</form>
		</div>

{% endif %} 

{% endblock %}