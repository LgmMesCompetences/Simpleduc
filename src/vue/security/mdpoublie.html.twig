{% extends "base.html.twig" %}
{% block title %} {{ parent() }} - Accueil{% endblock %}


{% block navbar %}{% endblock %}

{% block contenu %}

    {% if form.valide is defined %}
    {% if form.valide == true %}
        <h1>Mot de passe</h1>
    {% else %}
        <h1>Echec de la modification</h1>
        <h1>Erreur : {{form.message}}</h1>
        <h1><a href="index.php?page=mdpoublie">Retourner sur la page de connexion</a></h1>
    {% endif %} 
{% else %} 

        <div class="boiteConnexion z-depth-3 white">
			<form action="index.php?page=mdpoublie"method="post"enctype="application/x-www-form-urlencoded">
            <div class="input-field col s6">
				    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="validate" required autofocus>
                    <span class="helper-text" data-error="Email non valide" data-success=""></span>
                </div>
	    		
                <div class="center-align col s6">
                    <button class="waves-effect waves-light btn" type="submit" name="btConnecter">A faire</button>
                    <br>
                    <a href="index.php?page=connexion"><small>Retour</small></a>

                </div>	    
			</form>
		</div>

{% endif %} 

{% endblock %}