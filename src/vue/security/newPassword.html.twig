{% extends "base.html.twig" %}
{% block title %} {{ parent() }} - Accueil{% endblock %}


{% block navbar %}{% endblock %}

{% block contenu %}

        <div class="boiteConnexion z-depth-3 white">
			<form method="post"enctype="application/x-www-form-urlencoded">
	    		<div class="input-field col s6">
				    <label for="password">Nouveau mot de passe</label>
                    <input type="password" id="password" name="password" autocomplete="password" required>
                </div>
	    		<div class="input-field col s6">
                    <label for="password2">Confirmation mot de passe</label>
                    <input type="password" id="password2" name="password2" autocomplete="password2" required>
                </div>
                <div class="center-align col s6">
                    <button class="waves-effect waves-light btn" type="submit" name="btChanger">Changer de mot de passe</button>
                    <br>
                    <a href="index.php?page=connexion"><small>retour</small></a>
                </div>	    
			</form>

            {% if form.valide == false %}
            <br>
            <br>
            <div class="center-align">
                <span>{{ form.message }}</span>
            </div>
            {% endif %}
		</div>


{% endblock %}