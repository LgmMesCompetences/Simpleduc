                        <th class="right-align" scope="col" width="10%">A déduire</th>
                        <th class="right-align" scope="col" width="10%">A payer</th>
                        <th class="right-align" scope="col" width="10%">Charges patronales<br>Montant</th>
                    </tr>
                </thead>
                <tbody>
