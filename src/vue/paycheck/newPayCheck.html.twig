{% extends "base.html.twig" %}
{% block title %} {{ parent() }} - Nouvelle fiche de paie{% endblock %}

{% block contenu %}


<div class="container">
<h3 class="center-align">Formulaire de création de fiche de paie</h3>

    <div class="row">
        <form class="col s12">
            <div class="row">
                <div class="col s12">
                    <label>Choisir le nom de l'employé</label>
                    <select>
                        <option value="" disabled selected>Nom de l'employé</option>
                        {% for u in user %}
                        <option value={{ u.id }}>{{ u.nom }} {{ u.prenom }}, {{ u.libellefonction }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="input-field col s6">
                    <input disabled value="I am not editable" id="disabled" type="text" class="validate">
                    <label for="disabled">Disabled</label>
                </div>
                <div class="input-field col s6">
                    <input disabled value="I am not editable" id="disabled" type="text" class="validate">
                    <label for="disabled">Disabled</label>
                </div>
                                     
                <div class="input-field col s6">
                    <input placeholder="Placeholder" id="first_name" type="text" class="validate">
                    <label for="first_name">First Name</label>
                </div>
                <div class="input-field col s6">
                    <input id="last_name" type="text" class="validate">
                    <label for="last_name">Last Name</label>
                </div>
           
                <div class="input-field col s6">
                    <input id="password" type="password" class="validate">
                    <label for="password">Password</label>
                </div>
                <div class="input-field col s6">
                    <input id="email" type="email" class="validate">
                    <label for="email">Email</label>
                </div>
                <div class="input-field col s6">
                    <input id="email" type="email" class="validate">
                    <label for="email">Email</label>
                </div>
            </div>    
        </form>
    </div>
</div>


 

{% endblock %}

{% block javascript %}
     <script>
   $(document).ready(function(){
    $('select').formSelect();
  });
 
 </script>
{% endblock %}